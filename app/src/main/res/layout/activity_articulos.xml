<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#282828"
    android:layout_height="match_parent"
    tools:context=".Actividades.ArticulosActivity">

    <TextView
        android:id="@+id/texttituloarticulos"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="24dp"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="@string/art_culos_de_las_revistas_uteq"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        >

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/articulosrecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/texttituloarticulos"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>